@import 'base.styl'
.wrap 
    .banner 
        .app-title
            margin-top .5rem /* 50/100 */
        .back
            font-size .32rem /* 32/100 */
            color #FFF
            display inline-block
            margin-top .45rem /* 45/100 */
            padding-left .25rem /* 25/100 */
    .content
        .map
            width 100%
            height 7.92rem /* 792/100 */
            box-shadow 0px 3px 6px 3px rgba(238,238,238,1)
            border-radius .2rem /* 20/100 */
            border 1px solid #D8D8D8
        .park-map
            width 100%
            height 9.25rem /* 925/100 */
            box-shadow 0px 3px 6px 3px rgba(238,238,238,1)
            border 1px solid #D8D8D8
            border-radius .2rem /* 20/100 */
            >img
                width 100%
                height 100%
        .use-map
            border 0
            outline none 
            background #B1CC1E
            color #fff
            box-shadow 0px 3px 6px 3px rgba(213,230,121,1)
            border-radius .47rem /* 47/100 */
            font-size .32rem /* 32/100 */
            width 100%
            height .94rem /* 94/100 */
            margin-top .4rem /* 40/100 */