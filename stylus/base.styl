.wrap
    min-height 100vh
    font-size 0
    .banner
        height 3.85rem /* 385/100 */
        width 100%
        background url('../img/banner.png') no-repeat
        background-size 100%
        overflow hidden
        .app-title
            color #fff
            font-size .48rem /* 48/100 */
            margin-top 1.4rem /* 120/100 */
