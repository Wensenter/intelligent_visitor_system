                &:last-child
                    border-bottom 0
            .time
                >dd
                    justify-content center
                    >span
                        flex 1
                        background transparent
                        color #FFFFFF
                        font-size .22rem /* 22/100 */
                        outline none
                        border 0
                        text-align center
                        margin-top .4rem /* 40/100 */
