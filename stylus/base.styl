                    display flex
                    justify-content space-between
                    .title
                        .icon-user
                            display inline-block
                            width .4rem /* 40/100 */
                            height .4rem /* 40/100 */
                            vertical-align middle
                            margin-right .18rem /* 18/100 */
                            background url('../img/user_icon.png') no-repeat
